{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "学生的姓名",
      "minLength": 1
    },
    "remark": {
      "type": "string",
      "description": "学生的备注信息",
      "minLength": 1
    },
    "spell_name": {
      "type": "string",
      "description": "学生的拼音",
      "minLength": 1
    },
    "genders": {
      "type": "integer",
      "enum": [0, 1],
      "description": "学生的性别，0 为女性，1 为男性"
    },
    "phone": {
      "type": "string",
      "description": "学生的电话号码",
      "pattern": "^1[3-9]\\d{9}$",
      "minLength": 11,
      "maxLength": 11
    }
  },
  "required": ["name", "remark", "spell_name", "genders"],
  "additionalProperties": false
}
