{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "学生的姓名",
      "minLength": 1
    },
    "remark": {
      "type": "string",
      "description": "学生的备注信息",
      "minLength": 1
    },
    "spell_name": {
      "type": "string",
      "description": "学生的拼音",
      "minLength": 1
    },
    "genders": {
      "type": "integer",
      "enum": [0, 1],
      "description": "学生的性别，0 为女性，1 为男性"
    },
    "phone": {
      "type": "string",
      "description": "学生的电话号码",
      "minLength": 11,
      "maxLength": 11
    },
    "class_timetable": {
      "type": "array",
      "description": "学生所选课程表",
      "items": {
        "type": "object",
        "required": ["classtimetable_id", "pay_status"],
        "enum": ["unpaid", "paid", "refunded"],
        "default": "unpaid",
        "properties": {
          "class_timetable_id": {
            "type": "string",
            "description": "课表ID"
          },
          "pay_status": {
            "type": "string",
            "description": "支付状态"
          }
        }
      },
      "default": [],
      "minItems": 0,
      "uniqueItems": true
    }
  },
  "required": ["name", "remark", "spell_name", "genders", "phone", "class_timetable"],
  "additionalProperties": false
}
